// Include the mongoose library
const mongoose = require('mongoose');

// Define the schema for the <%= template.modelName %> model
const <%= template.modelName %>Schema = new mongoose.Schema({
<% for(var i=0; i< template.fields.length; i++) { -%>
  <%= template.fields[i].fieldName %>: {
    type: <%= template.fields[i].fieldType %>
  }<% if (i < template.fields.length - 1) {%>,<% } %>
<% } -%>
});

// Export the model for external access
module.exports = mongoose.model( '<%= template.modelName %>', <%= template.modelName %>Schema );